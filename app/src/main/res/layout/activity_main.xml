<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAB3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <EditText
            android:id="@+id/editText1Id"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="@string/editText1_text"
            android:backgroundTint="#110505"
           android:textCursorDrawable="@null"
            android:inputType="numberDecimal"/>
        <EditText

            android:id="@+id/editText2Id"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="@string/editText2_text"
            android:inputType="numberDecimal"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/loginButtonId"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_name"
        android:onClick="showMessage"
        android:drawableLeft="@drawable/login"/>


        />
    <Button
        android:id="@+id/logoutButtonId"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logOut"
        android:onClick="showMessage"

        android:textAllCaps="false"
        />


        </LinearLayout>

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>